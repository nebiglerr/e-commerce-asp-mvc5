    <script type="text/javascript">

    $("#orderGave").click(function () {

        var OrderDetailView = {
            Id: @Model.Id,
            ProductId: @Model.Price,
            VariantId: @ViewBag.ProductVariant[0].Id,
            Price: $("#Price").val(),
            Quantity: $("#counter").val(),
            CargoId: 1,
            PaymentMethodId: 4,
            PropertyId: @ViewBag.ProductProperty[0].Id,
            Kdv: (($("#counter").val()*$("#Price").val())*0.18),
            Total: ($("#counter").val()*$("#Price").val()) + (($("#counter").val() * $("#Price").val()) * 0.18),
            SellBy: $("#date").val(),
            Name : $("#name").val(),

        }

        $.ajax({

            type: "POST",
            url: "/Product/Detail",
            data: JSON.stringify(OrderDetailView),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                toastr["success"]("Sepete Eklendi", "Mesaj")
            }, error: function (err) {


            }
        });

    });
    </script>



