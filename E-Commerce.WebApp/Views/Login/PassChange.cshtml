@model E_Commerce.Entities.WebAppViewModel.ChangePasswordView
@{
    ViewBag.Title = "PassChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-section sp-inner-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">

                            <a href="/Login/OrderHistory" class=""><i class="fa fa-cart-arrow-down"></i> Sipariş Geçmişi</a>

                            @*

                                <a href="#payment-method" data-toggle="tab" class="">
                                    <i class="fa fa-credit-card"></i> Payment
                                    Method
                                </a>*@

                            @*  <a href="#address-edit" data-toggle="tab" class=""><i class="fa fa-map-marker"></i> address</a>*@

                            <a href="/Login/Account" class=""><i class="fa fa-user"></i> Hesap Detay</a>
                            <a href="#pass-change" data-toggle="tab" class="active show "><i class="fa fa-passport"></i>Şifreni Değiştir</a>

                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt-30 mt-lg-0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->

                            <div class="tab-pane fade active show " id="pass-change" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Şifreni Değiştir</h3>

                                    <div class="account-details-form">

                                        @using (Html.BeginForm("PassChange", "Login", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="row">

                                                <div class="col-12 mb-30">
                                                    @Html.TextBoxFor(Model => Model.OldPass, new { @class = "form-control", placeholder = "Eski Şifre", id = "OldPass", type = "password" })
                                                    @Html.ValidationMessageFor(model => Model.OldPass)
                                                </div>

                                                <div class="col-lg-12 col-12 mb-30">
                                                    @Html.TextBoxFor(Model => Model.NewPass, new { @class = "form-control", placeholder = "Yeni Şifre", id = "NewPass", type = "password" })
                                                    @Html.ValidationMessageFor(model => Model.NewPass)
                                                </div>


                                                <div class="col-lg-12 col-12 mb-30">
                                                    @Html.TextBoxFor(Model => Model.ReNewPass, new { @class = "form-control", placeholder = "Yeni Şifre Tekrar", id = "NewPass", type = "password" })
                                                    @Html.ValidationMessageFor(model => Model.ReNewPass)
                                                </div>

                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-success p-1">Güncelle</button>
                                                </div>

                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>

            </div>
        </div>
    </div>
</div>


