@helper HeaderCategory(List<Category> categories)
{
    foreach (var item in categories)
    {
        var subConrol = categories.Where(x => x.UpperCategoryId == item.Id).FirstOrDefault();
        if (subConrol != null)
        {
            if (subConrol.UpperCategoryId == item.Id && item.UpperCategoryId == null)
            {

                <li class="mainmenu__item menu-item-has-children ">
                    <a href="~/@item.GenerateSlug()" class="mainmenu__link">@item.Definition</a>
                    <ul class="sub-menu">
                        @foreach (var subitem in categories.Where(x => x.UpperCategoryId == item.Id))
                        {
                            <li>
                                <a href="~/@subitem.GenerateSlug()">@subitem.Definition</a>
                            </li>
                        }
                    </ul>
                </li>
            }
        }
        else if (item.UpperCategoryId == null)
        {
            <li class="mainmenu__item menu-item-has-children ">
                <a href="~/@item.GenerateSlug()" class="mainmenu__link">@item.Definition</a>

            </li>
        }
    }
}
