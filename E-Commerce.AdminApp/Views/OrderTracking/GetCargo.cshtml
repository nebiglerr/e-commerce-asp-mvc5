@model IEnumerable<E_Commerce.Entities.Db.CargoCompany>
<script>
    $(document).ready(function () {
        $('#getList').DataTable();
    });
</script>

<div class="card  ">
    <div class="grid-margin stretch-card">
        <div class="card-body">
            <h4 class="card-title">Kargo Şirketi Listesi</h4>
            <table class="table" id="getList">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>
                            Şirket
                        </th>
                        <th>
                            Adres
                        </th>
                        <th>
                            Telefon
                        </th>
                        <th>
                            Web Site
                        </th>
                        <th>
                            E-Posta
                        </th>
                        <th>
                            VergiNo
                        </th>

                        <th>
                            Güncelle
                        </th>
                        <th>
                            Sil
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Adress</td>
                        <td>@item.Telefon</td>
                        <td>@item.WebSite</td>
                        <td>@item.EMail</td>
                        <td>@item.TaxNo</td>
                        <td>
                            <a class="btn btn-secondary" href="/OrderTracking/CargoCompanyUpdate/@item.Id">Güncelle</a>
                        </td>
                        <td> <a class="btn btn-info " href="/OrderTracking/Delete/@item.Id" onclick="return confirm('Silmek istediğinize eminmisiniz?')">Sil</a></td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>


</div>

