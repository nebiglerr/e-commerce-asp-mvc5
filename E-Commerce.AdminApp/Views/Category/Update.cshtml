@model E_Commerce.Entities.AdminViewModel.CategoryAddView
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">


    <div class="col-12 p-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Kategori Güncelle</h2>
                <div class="p-4">

                    @using (Html.BeginForm("Update", "Category", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" name="Definition" value="@Model.Definition" class="form-control" required />
                    </div>

                        <button type="submit" class="btn btn-success mr-2">Güncelle</button>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="col-12 p-3">
        @Html.Action("GetCategoryPartialList", "Category")
    </div>

</div>

