@model E_Commerce.Entities.AdminViewModel.CategoryAddView
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">


    <div class="col-12 p-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Kategori Ekle</h2>
                <div class="p-4">
                   
                        @using (Html.BeginForm("Add", "Category", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.Definition, new { @class = "form-control", placeholder = "Kategori Adı", id = "CatName" })
                            @Html.ValidationMessageFor(model => Model.Definition)
                        </div>
                        
                            <button type="submit" class="btn btn-success mr-2">Kaydet</button>
                        }
                 
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 p-3">
        @Html.Action("GetCategoryPartialList", "Category")
    </div>

</div>

